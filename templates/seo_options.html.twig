{% extends 'sections/layout.html.twig' %}

{% block title %}Options WPMU \ SEO{% endblock %}

{% block page_content %}
	<div class="aky_card">
		{% include 'components/action_block.html.twig' with {
			'title': 'Plugin SEO installé',
			'data': seo_plugins,
		} %}

		{% include 'components/action_block.html.twig' with {
			'title': 'Schema Advanced',
			'data': schema_advanced,
			'action_name': 'akyos_updates_schema_advanced',
			'action_label': 'Aller à la page',
		} %}

		{% for key, page in pages %}
			{% include 'components/action_block.html.twig' with {
				'title': null,
				'data': page,
				'action_name': 'akyos_updates_index_page',
				'action_label': 'Indexer la page',
				'reverse_action_label': 'Déindexer la page',
				'reverse_action_name': 'akyos_updates_noindex_page',
				'key': key
			} %}
		{% endfor %}
	</div>
{% endblock %}
